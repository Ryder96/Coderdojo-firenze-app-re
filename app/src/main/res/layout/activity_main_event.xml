<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/eventToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/eventTabHost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/eventToolbar"
        app:accentColor="@color/color_toolbar_2"
        app:primaryColor="@color/color_toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/eventViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/eventTabHost" />

</RelativeLayout>
