<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    card:cardCornerRadius="10dp"
    card:cardElevation="5sp">

    <RelativeLayout
        android:id="@+id/eventListInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/eventListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/eventListIcon"
            android:layout_toRightOf="@+id/eventListIcon"
            android:text="CoderTitolo - DojoVolta!"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventListLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventListTitle"
            android:layout_alignStart="@+id/eventListTitle"
            android:layout_below="@+id/eventListTitle"
            android:text="Via Carlo Marx 77"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eventListPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eventListLocation"
            android:layout_alignStart="@+id/eventListLocation"
            android:layout_below="@+id/eventListLocation"
            android:layout_marginBottom="10dp"
            android:text="Data"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eventListIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</android.support.v7.widget.CardView>